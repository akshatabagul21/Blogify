<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Bootstrap Demo</title>
</head>

<body>
    <%- include('./partials/nav.ejs') %>
        <%- include('./partials/scripts.ejs') %>
            <div class="container mt-5 p-10">
                <a href="/" class="btn btn-outline-primary">Back</a>
                <div class="d-flex flex-column align-items-center">
                    <h2 class="mt-3">
                        <%= blog.title %>
                    </h2>
                    <img src="<%= blog.imageUrl %>" style="width: 500px; height: 300px;" class="mt-3">
                </div>
                <pre class="mt-3 w-100" style="overflow:hidden ;"><%= blog.content %></pre>

                <div class="d-flex flex-row mb-3 align-items-center">
                    <span class="me-2">Created By - </span>
                    <img src="../uploads/profile.png" style="width: 30px;height: 30px;" class="me-1">
                    <span>
                        <%= blog.createdBy.userName %>
                    </span>
                </div>
                <div class="mb-3">
                    <h2>Comments</h2>
                    <a href="/blog/<%= blog._id %>/comment" class="btn btn-primary mt-2 mb-2" >Add</a> 
                </div>

             <% blog.comments.forEach(element => { %>
                <div class="d-flex mb-3">
                    <img src="../uploads/profile.png" style="width:40px; height:40px; border-radius:50%;" class="me-2">
                    <div class="bg-light p-2 rounded w-100">
                        <strong> <%= element.userName %></strong>
                        <p class="mb-1 mt-1">
                            <%= element.commentBody %>
                        </p>
                    </div>
                </div>
              
             <% }) %>

            </div>




</body>

</html>