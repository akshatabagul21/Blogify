<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Bootstrap Demo</title>
</head>

<body>
    <%- include('./partials/nav.ejs') %>
        <%- include('./partials/scripts.ejs') %>
           
            <div class="container mt-3 p-10 bg-light border rounded">
                <form action="/users/signin" method="post">
                    <div class="form-group mt-3">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            name="email" placeholder="Enter email" value=" <%= locals.formData? locals.formData.email : " " %>">
                    </div>
                    <div class="form-group mt-3">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"
                            name="password" <%= locals.formData && locals.formData.password ? `value="${locals.formData.password}"`: '' %>>
                            <%= JSON.stringify(locals.formData) %>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Submit</button>
                </form>
            </div>


</body>

</html>