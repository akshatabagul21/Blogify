<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head.ejs') %>
    <title>Bootstrap Demo</title>
</head>
<body>
     <%- include('./partials/nav.ejs') %>
     <%- include('./partials/scripts.ejs') %>
     <div class="container mt-4">
         <form action="/users/signup" method="post">
              <div class="form-group">
                 <label for="exampleInputUserName">User Name</label>
                 <input type="text" class="form-control" id="exampleInputUserName" value="<%= formData? formData.userName : '' %>" aria-describedby="userNameHelp" name="userName"
                     placeholder="Enter User Name">
             </div>
             <div class="form-group mt-3">
                 <label for="exampleInputEmail1">Email address</label>
                 <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" value="<%= formData? formData.email : '' %>"
                     placeholder="Enter email">
             </div>
             <div class="form-group mt-3">
                 <label for="exampleInputPassword1">Password</label>
                 <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password" value="<%= formData? formData.password : '' %>">
             </div>
             
             <button type="submit" class="btn btn-primary mt-3" >Submit</button>
         </form>

     </div>

</body>
</html>
